<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntelAPUSettings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:Custom="using:Microsoft.UI.Xaml.Controls.Primitives"
    x:Class="IntelAPUSettings.MainPage"
    mc:Ignorable="d"
    d:DesignWidth="798"
    d:DesignHeight="949"
    d:DataContext="{d:DesignInstance Type=local:MainPageModel}"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    Background="#25282C"
    RequestedTheme="Dark" FontSize="16">

    <Page.Resources>
        <SolidColorBrush x:Key="ButtonBackground" Color="#3E434B"/>
        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#484E58"/>
        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#3A3F47"/>
        <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#2C3035"/>
        <SolidColorBrush x:Key="ButtonBorderBrush" Color="#6B7584"/>
        <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="#6B7584"/>
        <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="#555D69"/>
        <SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="#3A3F46"/>
        <StaticResource x:Key="RepeatButtonBackground" ResourceKey="ButtonBackground"/>
        <StaticResource x:Key="RepeatButtonBackgroundPointerOver" ResourceKey="ButtonBackgroundPointerOver"/>
        <StaticResource x:Key="RepeatButtonBackgroundPressed" ResourceKey="ButtonBackgroundPressed"/>
        <StaticResource x:Key="RepeatButtonBackgroundDisabled" ResourceKey="ButtonBackgroundDisabled"/>
        <StaticResource x:Key="RepeatButtonBorderBrush" ResourceKey="ButtonBorderBrush"/>
        <StaticResource x:Key="RepeatButtonBorderBrushPointerOver" ResourceKey="ButtonBorderBrushPointerOver"/>
        <StaticResource x:Key="RepeatButtonBorderBrushPressed" ResourceKey="ButtonBorderBrushPressed"/>
        <StaticResource x:Key="RepeatButtonBorderBrushDisabled" ResourceKey="ButtonBorderBrushDisabled"/>
        <CornerRadius x:Key="ControlCornerRadius">8,8,8,8</CornerRadius>
        <Thickness x:Key="ButtonPadding">15,10,15,11</Thickness>
        <local:CpuBoostModeConverter x:Key="CpuBoostModeConverter"/>
    </Page.Resources>


    <Grid Padding="12">

        <Grid.RowDefinitions>
            <!-- BackendPanel -->
            <RowDefinition Height="Auto"/>
            <!-- MainPanel ScrollViewer -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="BackendPanel" Grid.Row="0" VerticalAlignment="Top">
            <TextBlock HorizontalTextAlignment="Center" Margin="0,5">IntelAPUSettings Backend is not connected</TextBlock>
            <Button x:Name="LaunchBackendButton" Grid.Row="1" Margin="0,5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="LaunchBackendButton_OnClick" FontSize="16">
                Launch Backend
            </Button>
        </Grid>

        <ScrollViewer Grid.Row="1" Margin="15,5,0,0">
            <StackPanel Orientation="Vertical" Spacing="16" x:Name="MainPanel">


                <!-- CPU Boost -->
                <StackPanel Orientation="Vertical" Spacing="4">
                    <!-- Title + Status -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <!-- Title -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Status Text -->
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="CPU Boost Mode"
                               HorizontalAlignment="Left"
                               FontSize="16"
                               FontWeight="SemiBold" VerticalAlignment="Center"/>

                    <!-- Status Text -->
                    <TextBlock x:Name="CpuBoostStatusText"
                   Grid.Column="1"
                   Text="{Binding BoostMode, Converter={StaticResource CpuBoostModeConverter}, ConverterParameter=Text}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="{Binding BoostMode, Converter={StaticResource CpuBoostModeConverter}, ConverterParameter=Brush}"
                   VerticalAlignment="Center"
                   Margin="10,0,15,10" SelectionChanged="CpuBoostStatusText_SelectionChanged"/>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" 
                                HorizontalAlignment="Left" Margin="0,8,0,0" Width="556" Height="60" VerticalAlignment="Center">
                        <Button x:Name="AgressiveCPUBoostButton" Grid.Row="1" HorizontalAlignment="Left" Click="AgressiveCPUBoostButton_OnClick" FontSize="18" Margin="0,6,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="45">
                            Agressive
                        </Button>
                        <Button x:Name="EnabledCPUBoostButton" Grid.Row="1" HorizontalAlignment="Center" Click="EnabledCPUBoostButton_OnClick" FontSize="18" Margin="0,6,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="45">
                            Enabled
                        </Button>
                        <Button x:Name="DisabledCPUBoostButton" Grid.Row="1" HorizontalAlignment="Right" Click="DisabledCPUBoostButton_OnClick" FontSize="18" Margin="0,6,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="45">
                            Disabled
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- FPS Limiter -->
                <StackPanel>
                    <!-- Row: Text on left, Toggle on right -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="FPS Limiter: To be done"
                   VerticalAlignment="Center"
                   FontSize="16"
                   FontWeight="SemiBold"/>

                        <ToggleSwitch x:Name="FpsLimiterToggle"
                      Grid.Column="1"
                      OffContent="Off"
                      OnContent="On"
                      IsOn="True"
                      Toggled="FpsLimiterToggle_Toggled"/>
                    </Grid>

                    <!-- Slider + Numeric Input -->
                    <Grid x:Name="FpsSliderPanel" Margin="0,6,0,0" Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="125"/>
                        </Grid.ColumnDefinitions>

                        <!-- Slider -->
                        <Slider x:Name="FPSSlider"
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            Minimum="{Binding FpsMin}"
                            Maximum="{Binding FpsMax}"
                            Value="{Binding Fps, Mode=TwoWay}"/>

                        <!-- Numeric input -->
                        <muxc:NumberBox x:Name="FpsValueBox"
                        Grid.Column="1"
                        Value="{Binding Fps, Mode=TwoWay}"
                        Minimum="{Binding FpsMin}"
                        Maximum="{Binding FpsMax}"
                        SpinButtonPlacementMode="Inline"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center" FontSize="16" Height="40"/>
                    </Grid>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Endurance Gaming AutoTDP: To Be Done"
               FontSize="16"
               Margin="0,0,0,4"/>

                    <ComboBox x:Name="EnduranceGamingComboBox"
              HorizontalAlignment="Stretch"
              SelectionChanged="EnduranceGamingComboBox_SelectionChanged" FontSize="16">
                        <ComboBoxItem Content="OFF - Unlimited" Tag="Off" IsSelected="True"/>
                        <ComboBoxItem Content="Performance - 60FPS" Tag="Performance"/>
                        <ComboBoxItem Content="Balanced - 60FPS" Tag="Balanced"/>
                        <ComboBoxItem Content="Efficiency - 30FPS" Tag="Efficiency"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Xe Low Latency: To Be Done"
                     FontSize="16"
                     Margin="0,0,0,4"/>

                    <ComboBox x:Name="LowLatencyComboBox"
                    HorizontalAlignment="Stretch"
                    SelectionChanged="LowLatencyComboBox_SelectionChanged" FontSize="16">
                        <ComboBoxItem Content="OFF" Tag="Off" IsSelected="True"/>
                        <ComboBoxItem Content="On" Tag="Performance"/>
                        <ComboBoxItem Content="On + Boost" Tag="Boost"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
