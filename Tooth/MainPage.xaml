<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tooth"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:Custom="using:Microsoft.UI.Xaml.Controls.Primitives"
    x:Class="Tooth.MainPage"
    mc:Ignorable="d"
    d:DesignWidth="798"
    d:DesignHeight="949"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    Background="#25282C"
    RequestedTheme="Dark" FontSize="18" 
    d:DataContext="{d:DesignInstance Type=local:MainPageModelWrapper}" >

    <Page.Resources>
        <SolidColorBrush x:Key="ButtonBackground" Color="#3E434B"/>
        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#484E58"/>
        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#3A3F47"/>
        <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#2C3035"/>
        <SolidColorBrush x:Key="ButtonBorderBrush" Color="#6B7584"/>
        <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="#6B7584"/>
        <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="#555D69"/>
        <SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="#3A3F46"/>
        <StaticResource x:Key="RepeatButtonBackground" ResourceKey="ButtonBackground"/>
        <StaticResource x:Key="RepeatButtonBackgroundPointerOver" ResourceKey="ButtonBackgroundPointerOver"/>
        <StaticResource x:Key="RepeatButtonBackgroundPressed" ResourceKey="ButtonBackgroundPressed"/>
        <StaticResource x:Key="RepeatButtonBackgroundDisabled" ResourceKey="ButtonBackgroundDisabled"/>
        <StaticResource x:Key="RepeatButtonBorderBrush" ResourceKey="ButtonBorderBrush"/>
        <StaticResource x:Key="RepeatButtonBorderBrushPointerOver" ResourceKey="ButtonBorderBrushPointerOver"/>
        <StaticResource x:Key="RepeatButtonBorderBrushPressed" ResourceKey="ButtonBorderBrushPressed"/>
        <StaticResource x:Key="RepeatButtonBorderBrushDisabled" ResourceKey="ButtonBorderBrushDisabled"/>
        <CornerRadius x:Key="ControlCornerRadius">8,8,8,8</CornerRadius>
        <Thickness x:Key="ButtonPadding">15,10,15,11</Thickness>
        <local:CpuBoostModeConverter x:Key="CpuBoostModeConverter"/>
    </Page.Resources>

    <Grid Padding="12">


        <!-- Backend Panel -->
        <StackPanel x:Name="BackendPanel" VerticalAlignment="Top" Spacing="5" Visibility="Collapsed">
            <TextBlock HorizontalTextAlignment="Center">Tooth Backend is not connected</TextBlock>
            <Button x:Name="LaunchBackendButton"
                    HorizontalAlignment="Stretch"
                    Click="LaunchBackendButton_OnClick"
                    FontSize="18"
                    Height="47">
                Launch Backend
            </Button>
        </StackPanel>

        <ScrollViewer Margin="5,5,5,7"
                      VerticalScrollMode="Auto"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollMode="Disabled">

            <StackPanel x:Name="MainPanel" Orientation="Vertical" Spacing="16" Margin="15,5,15,5">

                <!-- CPU Boost -->
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="CPU Boost Mode"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="CpuBoostModeSelector"
                              SelectedValue="{Binding BoostMode, Mode=TwoWay}"
                              Loaded="CpuBoostModeSelector_Loaded"
                              SelectedValuePath="Tag"
                              HorizontalAlignment="Stretch"
                              FontSize="18"
                              Height="40"
                              Margin="5,0,5,0"
                              SelectionChanged="CpuBoostModeSelector_SelectionChanged"
                              >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Content}"
                                           Foreground="{Binding Tag, Converter={StaticResource CpuBoostModeConverter}, ConverterParameter=Brush}"
                                           FontSize="18"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <!-- Dropdown Items -->
                        <ComboBoxItem Content="Disabled" Foreground="Red">
                            <ComboBoxItem.Tag>
                                <x:Double>0</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>

                        <ComboBoxItem Content="Enabled" Foreground="White">
                            <ComboBoxItem.Tag>
                                <x:Double>1</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>

                        <ComboBoxItem Content="Aggressive" Foreground="Green">
                            <ComboBoxItem.Tag>
                                <x:Double>2</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!-- FPS Limiter -->
                <StackPanel Orientation="Vertical" Spacing="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Frames per Second Limiter"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   FontWeight="Bold" SelectionChanged="TextBlock_SelectionChanged"/>
                        <ToggleSwitch x:Name="FpsLimiterToggle"
                                      Grid.Column="1"
                                      OffContent="Off"
                                      OnContent="On"
                                      IsOn="{Binding FpsLimitEnabled, Mode=TwoWay}"
                                      Toggled="FpsLimiterToggle_Toggled"/>
                    </Grid>

                    <Border x:Name="FpsLimiterPanel"
                            Margin="0,6,0,0"
                            CornerRadius="8"
                            Background="#30343A"
                            BorderBrush="#50555C"
                            BorderThickness="1"
                            Padding="8">
                        <Grid x:Name="FpsSliderPanel">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="187*"/>
                                <ColumnDefinition Width="404*"/>
                                <ColumnDefinition Width="125"/>
                            </Grid.ColumnDefinitions>

                            <Slider x:Name="FPSSlider"
                                    Grid.Column="0"
                                    Margin="5,0,10,0"
                                    Minimum="{Binding FpsMin}"
                                    Maximum="{Binding FpsMax}"
                                    Value="{Binding FpsLimitValue, Mode=TwoWay}"
                                    IsEnabled="{Binding IsOn, ElementName=FpsLimiterToggle}" Grid.ColumnSpan="2" ValueChanged="FPSSlider_ValueChanged"/>

                            <muxc:NumberBox x:Name="FpsValueBox"
                                            Grid.Column="2"
                                            Value="{Binding FpsLimitValue, Mode=TwoWay}"
                                            Minimum="{Binding FpsMin}"
                                            Maximum="{Binding FpsMax}"
                                            SpinButtonPlacementMode="Inline"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            Height="40"
                                            IsEnabled="{Binding IsOn, ElementName=FpsLimiterToggle}" Margin="10,0,0,0" Width="115"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Adjust Display Resolution -->
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="Adjust Display Resolution: To be done"
                               FontSize="18"
                               Margin="0,0,0,4" FontWeight="Bold"/>
                    <ComboBox x:Name="ResolutionComboBox"
                              HorizontalAlignment="Stretch"
                              SelectionChanged="ResolutionComboBox_SelectionChanged"
                              SelectedValue="{Binding Resolution, Mode=TwoWay}"
                              SelectedValuePath="Tag"
                              FontSize="18"
                              Height="40"
                              Margin="5,0,5,0">
                        <ComboBoxItem Content="1920 x 1200 (Native)" IsSelected="True">
                            <ComboBoxItem.Tag>
                                <x:Double>0</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                        <ComboBoxItem Content="1680 x 1050">
                            <ComboBoxItem.Tag>
                                <x:Double>1</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                        <ComboBoxItem Content="1440 x 900" >
                            <ComboBoxItem.Tag>
                                <x:Double>2</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                        <ComboBoxItem Content="1280 x 800">
                            <ComboBoxItem.Tag>
                                <x:Double>3</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!-- Endurance Gaming -->
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="Endurance Gaming AutoTDP/TargetFPS"
                               FontSize="18"
                               Margin="0,0,0,4" FontWeight="Bold"/>
                    <ComboBox x:Name="EnduranceGamingComboBox"
                              HorizontalAlignment="Stretch"
                              SelectionChanged="EnduranceGamingComboBox_SelectionChanged"
                              SelectedValue="{Binding EnduranceGaming, Mode=TwoWay}"
                              SelectedValuePath="Tag"
                              FontSize="18"
                              Height="40"
                              Margin="5,0,5,0">
                        <ComboBoxItem Content="OFF - Unlimited FPS" IsSelected="True">
                            <ComboBoxItem.Tag>
                                <x:Double>0</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                        <ComboBoxItem Content="Performance - 60FPS">
                            <ComboBoxItem.Tag>
                                <x:Double>1</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                        <ComboBoxItem Content="Balanced - 40FPS" >
                            <ComboBoxItem.Tag>
                                <x:Double>2</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                        <ComboBoxItem Content="Efficiency - 30FPS">
                            <ComboBoxItem.Tag>
                                <x:Double>3</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!-- Xe Low Latency -->
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="Xe Low Latency: To Be Done"
                               FontSize="18"
                               Margin="0,0,0,4" FontWeight="Bold"/>
                    <ComboBox x:Name="LowLatencyComboBox"
                              HorizontalAlignment="Stretch"
                              SelectionChanged="LowLatencyComboBox_SelectionChanged"
                              FontSize="18"
                              Height="40"
                              Margin="5,0,5,0"
                          SelectedValuePath="Tag">
                        <ComboBoxItem Content="OFF" IsSelected="True">
                            <ComboBoxItem.Tag>
                                <x:Double>1</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                        <ComboBoxItem Content="On">
                            <ComboBoxItem.Tag>
                                <x:Double>1</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                        <ComboBoxItem Content="On + Boost">
                            <ComboBoxItem.Tag>
                                <x:Double>1</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!-- Frame Synchronization -->
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="Frame Sync: To Be Done"
                FontSize="18"
                Margin="0,0,0,4" FontWeight="Bold"/>
                    <ComboBox x:Name="FrameSyncComboBox"
                HorizontalAlignment="Stretch"
                SelectionChanged="FrameSyncComboBox_SelectionChanged"
                SelectedValuePath="Tag"
                FontSize="18"
                Height="40"
                Margin="5,0,5,0">
                        <ComboBoxItem Content="Application Choice" IsSelected="True">
                            <ComboBoxItem.Tag>
                                <x:Double>0</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                        <ComboBoxItem Content="VSync On">
                            <ComboBoxItem.Tag>
                                <x:Double>1</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                        <ComboBoxItem Content="Smooth Sync">
                            <ComboBoxItem.Tag>
                                <x:Double>2</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                        <ComboBoxItem Content="Smart Sync">
                            <ComboBoxItem.Tag>
                                <x:Double>3</x:Double>
                            </ComboBoxItem.Tag>
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!-- Launch Intel Graphics Software -->
                <Button x:Name="LaunchIGSButton"
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        Click="LaunchIGSButton_OnClick"
                        FontSize="18"
                        Background="#FF2256A9"
                        Height="53">
                    Launch Intel Graphics Software
                </Button>

                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Text="Settings" FontSize="18" FontWeight="Bold"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Start Backend Automatically" FontSize="18"/>
                        <ToggleSwitch Grid.Column="1" x:Name="AutoStartToggle" IsOn="{Binding AutoStart, Mode=TwoWay}"/>

                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
